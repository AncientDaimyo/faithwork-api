{% extends 'base.html.twig' %}

{% block title %}FAITHWORK
{% endblock %}

{% block body %}
    <div {{ vue_component('HeaderCommon') }}></div>
    <div class="cart-page">
	{% for item in cart_items %}
            <div class="cart-card-full" {{ vue_component('CartCard', {  'id'            :   item.product.id,
                                                                        'name'          :   item.product.name,
                                                                        'article'       :   item.product.article,
                                                                        'image'         :   item.product.image,
                                                                        'cost'          :   item.product.cost,
                                                                        'description'   :   item.product.description,
                                                                        'amount'        :   item.amount  } 
                                                              )
                                               }}>
            </div>
	{% endfor %}

    <div v-if="showImage"  class="product-card-add-to-cart">
        <button v-on:click="addToCart">add</button>
    </div>

    </div>
    <div {{ vue_component('FooterSecond') }}></div>
{% endblock %}
